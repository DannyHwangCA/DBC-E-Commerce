<% if flash[:success] %>
  <% flash.each do |message_type, msg| %>
    <div class="alert alert-<%= message_type %>">
      <%= msg %>
    </div>
  <% end %>
<% elsif flash[:error] %>
  <div class="alert alert-danger">
      <%= flash[:error] %>
  </div>
<% else %>
  <% flash.each do |message_type, errors| %>
    <div class="alert alert-<%= message_type %>">
    Total <%= pluralize(errors.count, "error") %>:
      <ul>
        <% errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<% end %>


