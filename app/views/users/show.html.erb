<% if @user %>
  <div class="container text-center">
    <div class="page-header">
      <h1><%= @user.username %></h1>
    </div>
  </div>
<% end %>
<% if @orders %>
  <div class="container">
    <h1 class="page-header">Order History</h1>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th></th>
            <th>Name</th>
            <th>Total</th>
            <th>Quantity</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Order date</th>
          </tr>
        </thead>
          <% @orders.each_with_index do |order, index| %>
          <tbody>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= order.product.name %></td>
              <td><%= order.total %></td>
              <td><%= order.quantity %></td>
              <td><%= order.address %></td>
              <td><%= order.phone %></td>
              <td><%= time_ago_in_words(order.created_at) %></td>
            </tr>
          </tbody>
          <% end %>
      </table>
    </div>
  </div>
<% end %>